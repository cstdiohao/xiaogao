<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nihao.mapper.IdMapper">
    <resultMap id="idRecord" type="com.nihao.entity.IdRecord">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="key_name" jdbcType="VARCHAR" property="key"/>
        <result column="index_num" jdbcType="INTEGER" property="index"/>
    </resultMap>

    <select id="get" resultMap="idRecord">
        select id, key_name, index_num from `id_table` where key_name = #{key}
    </select>

    <update id="update" parameterType="com.nihao.entity.IdRecord">
        update id_table
        <set>
            <if test="index != null">
                index_num = #{index},
            </if>
        </set>
        where id = #{id} and key_name = #{key}
    </update>

</mapper>